<%= form_for @user, :url => {:action => "signupdetails"} do |f| %>
    <table>
        <tr>
            <td><%= label_tag 'FirstName' %></td>
            <td><%= f.text_field :firstname %></td>
        </tr>

         <tr>
            <td><%= label_tag 'LastName' %></td>
            <td><%= f.text_field :lastname %></td>
        </tr>

        <tr>
            <td><%= label_tag 'password' %></td>
            <td><%= f.password_field :password %></td>
        </tr>

        <tr>
            <td><%= label_tag 'Emailid' %></td>
            <td><%= f.text_field :emailid %></td>
        </tr>

        <tr>
            <td><%= label_tag 'PhoneNumber' %></td>
            <td><%= f.text_field :phonenumber %></td>
        </tr>

        <tr>
            <td><%= label_tag 'gender' %></td>
            <td><%= f.radio_button :gender, 'male' %>male
            <%= f.radio_button :gender, 'female' %>female</td>
        </tr>

        <tr>
            <td><%= label_tag 'Qualification' %></td>
            <td><%= f.select :qualification, "<option>Software Engineer Trainee</option><option>Software Engineer</option><option>Delivery Manager</option>".html_safe %></td>
        </tr>

        <tr>
            <td><%= label_tag 'Married' %></td>
            <td><%= f.check_box :married %></td>
        </tr>


        <tr>
            <td><%= label_tag 'address' %></td>
            <td><%= f.text_area :address %></td>
        </tr>

        <tr>
            <td colspan="5"><center><%= f.submit "Submit"%></center></td>
        </tr>
  </table>

<%end%>

